<Window x:Class="Lexer.TreeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TreeWindow" 
         Width="{Binding CustomHeight, Mode=TwoWay}" Height="{Binding CustomHeight, Mode=TwoWay}" Loaded="Window_loaded">
    <Grid >
        <Button Content="Save image" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="SaveImage"/>
        <Grid Name="MainGrid" Margin="10,35,10,10"/>
    </Grid>
</Window>
