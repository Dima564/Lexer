<Window x:Class="Lexer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525"
        ResizeMode="NoResize">
    
    
    
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="Файл">
                    <MenuItem Header="Ввести вираз"/>
                    <MenuItem Header="Закрити"/>
                </MenuItem>
                <MenuItem Header="Інформація">
                    <MenuItem Header="Лексичний аналізатор"/>
                    <MenuItem Header="Синтакчичний аналізатор"/>
                    <MenuItem Header="Граматики"/>
                    <MenuItem Header="Польська нотація"/>
                    <MenuItem Header="Скінченні автомати"/>
                </MenuItem>
                <MenuItem Header="Допомога">
                    <MenuItem Header="Про программу"/>
                    <MenuItem Header="Про розробника"/>
                </MenuItem>
                
            </Menu>
            <StackPanel></StackPanel>
        </DockPanel>
        <TabControl HorizontalAlignment="Left" Height="300" VerticalAlignment="Top" Width="517" Margin="0,19,0,0">
            <TabItem Header="Лексичний аналіз">
                <Grid Background="#FFE5E5E5">
                    <Button Content="Process" HorizontalAlignment="Left" Margin="236,107,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
                    <TextBlock Name="ResultsTextBlock" HorizontalAlignment="Left" Margin="349,107,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="133" Width="129"/>
                    <TextBox Name="ExpressionLabel" HorizontalAlignment="Left" Height="23" Margin="52,106,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
                </Grid>
            </TabItem>
            <TabItem Header="Синатксичний аналіз">
                <Grid Background="#FFE5E5E5">
                </Grid>
            </TabItem>
            <TabItem Header="Граматики">
                <Grid Background="#FFE5E5E5">
                </Grid>
            </TabItem>
            <TabItem Header="Польський запис">
                <Grid Background="#FFE5E5E5">
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
